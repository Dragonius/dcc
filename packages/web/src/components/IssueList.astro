---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="rounded-lg border border-neutral-800 bg-card text-card-foreground shadow-sm">
	<h2 class="p-6 text-2xl font-semibold leading-none tracking-tight">{title}</h2>
	<ul class="flex flex-col gap-4 p-6 pt-0">
		<slot />
	</ul>
</div>
